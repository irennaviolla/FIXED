<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.service.ServicerProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-73dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="28sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="15sp"
                    android:background="@drawable/ic_baseline_arrow_back_24"
                    android:clickable="true"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Servicer Profile"
                    android:textColor="#F25765"
                    android:textSize="24sp"
                    android:textStyle="bold"></TextView>

            </LinearLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profilePictureServicer"
                android:layout_width="155sp"
                android:layout_height="155sp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:clickable="true"
                android:padding="5sp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/circular"
                app:strokeColor="#191D40"
                app:strokeWidth="2sp"></com.google.android.material.imageview.ShapeableImageView>

            <TextView
                android:id="@+id/nameServicerProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FULL NAME"
                android:textAlignment="center"
                android:textColor="#2D305B"
                android:textSize="21sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30sp"
                android:clickable="true"
                android:text="@string/change_description"
                android:visibility="visible"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*Click edit symbol to change profile and click again to save"
                android:textColor="#616161"
                android:textSize="13sp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Verified"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:visibility="visible"></TextView>

            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="20sp"
                android:background="#80191D40"></View>

            <LinearLayout
                android:id="@+id/rewardContainer"
                android:layout_width="match_parent"
                android:layout_height="77sp"
                android:layout_marginTop="7sp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15sp"
                    android:layout_weight="2"
                    android:clickable="false"
                    android:text="Wallet"
                    app:backgroundTint="#191D40"></Button>

                <Button
                    android:id="@+id/walletProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="15sp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    app:backgroundTint="#191D40"></Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="15sp"></TextView>

                <ImageView
                    android:id="@+id/bCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:background="@drawable/edit"
                    android:clickable="true"></ImageView>

                <TextView
                    android:id="@+id/categoryProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="category"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:visibility="visible"></TextView>

                <EditText
                    android:id="@+id/categoryProfileEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="right"
                    android:textSize="15sp"
                    android:visibility="gone"></EditText>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="*Category : television, refrigerator, air conditioner, dispenser, washing machine, fan, speaker, computer, laptop, handphone"
                android:textColor="#F25765"></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="20sp"
                android:background="#80191D40"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textSize="15sp"></TextView>

                <ImageView
                    android:id="@+id/bPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:background="@drawable/edit"
                    android:clickable="true"></ImageView>


                <TextView
                    android:id="@+id/priceProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Rp. -"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:visibility="visible"></TextView>


                <EditText
                    android:id="@+id/priceProfileEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="right"
                    android:maxLength="8"
                    android:textSize="15sp"
                    android:visibility="gone"></EditText>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="*Please fill a number between 1 - 10.000.000"
                android:textColor="#F25765"></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="20sp"
                android:background="#80191D40"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating"
                    android:textSize="15sp"></TextView>


                <TextView
                    android:id="@+id/rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="-"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:visibility="visible"></TextView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="20sp"
                android:background="#80191D40"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/emailServicerProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="email"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:visibility="visible"></TextView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="20sp"
                android:background="#80191D40"></View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/phoneServicerProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="08xxxxxxxxxx"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:visibility="visible"></TextView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="20sp"
                android:background="#80191D40"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/addressServicerProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="address"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:visibility="visible"></TextView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="20sp"
                android:background="#80191D40"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/dobServicerProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="11 August 2000"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:visibility="visible"></TextView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="150sp"
                android:background="#80191D40"></View>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>